{% extends 'ImageCropBundle::layout.html.twig' %}

{% block image_crop_content %}
    <div class="col-lg-12">
        <fieldset>{{ form(form) }}</fieldset>
    </div>

    <div class="col-lg-12">
        {% if renderCrop is defined and renderCrop %}
            {{ render(controller('ImageCropBundle:Default:crop', {'useImageCropMapping': mapping, 'imageName': imageName})) }}
        {% endif %}
    </div>
{% endblock %}